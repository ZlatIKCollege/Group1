<Window x:Class="Xiaomi.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xiaomi"
        mc:Ignorable="d"
        Title="Auth" Height="200" Width="300" Background="Pink"
        Closed="Window_closed">
    <StackPanel Margin="12">
        <TextBlock Text="Логин" Margin="0 0 0 4"/>
        <TextBox Name="LoginTextBox"/>

        <TextBlock Text="Пароль" Margin="0 0 0 4"/>
        <TextBox Name="PasswordTextBox"/>

        <Button Content="Войти" Width="200" Margin="0 16 0 0" Click="Login_click"/>
    </StackPanel>
</Window>
